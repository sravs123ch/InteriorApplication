.content-section {
   /*  background-color: #F8F8F2; */
    padding: 80px;
}

.title {
    font-size: clamp(24px, 4vw, 36px); /* Responsive font size */
    font-weight: 700;
    line-height: 1.2;
    text-transform: uppercase;
    white-space: nowrap; /* Prevents text wrapping */
    text-align: left; /* Align text to the left */
}

.sidebar {
    background-color: rgb(72, 140, 201);
    color: white;
    display: flex;
    flex-direction: column;
    align-items: flex-start; /* Align content to the left */
    justify-content: flex-start;
    padding: 30px;
    text-align: left; /* Ensures text alignment is left */
    min-height: 100vh;
    border-radius: 20px;
    overflow: hidden; /* Prevents text from breaking layout */
}

.title .black-text {
    color: black;
}

.title .white-text {
    color: white;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
    .sidebar {
        padding: 30px; /* Reduce padding for smaller screens */
    }

    .title {
        font-size: 28px; /* Adjust font size for smaller screens */
    }
}

@media (max-width: 480px) {
    .sidebar {
        padding: 20px; /* Further reduce padding */
    }

    .title {
        font-size: 24px; /* Adjust for mobile screens */
    }
}


.sidebar h2 {
    font-weight: 700;
    font-size: 28px;
    line-height: 1.3;
}

.sidebar .btn {
    background-color: white;
    color: black;
    font-weight: 600;
    border-radius: 25px;
    padding: 12px 24px;
    border: none;
    font-size: 16px;
    margin-top: 20px;
    display: flex;
    justify-content: center;
}

.sidebarcontainer {
    margin-top: 60px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* Image container adjustments */
.image-container {
    position: relative;
    margin-top: 30px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.image-container img {
    width: 250px;
    height: 350px;
    margin-bottom: -58px;
    object-fit: cover;
}

/* Responsive Adjustments */
@media (max-width: 1024px) {
